{
  "manifest_version": 3,
  "name": "Trợ Lý Tập Trung",
  "version": "1.0.0",
  "description": "Trợ lý thông minh giúp bạn duy trì sự tập trung khi làm việc và học tập",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}